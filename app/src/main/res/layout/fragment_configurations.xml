<AbsoluteLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools" android:layout_width="fill_parent"
    android:layout_height="match_parent"
    tools:context="com.zebra.mommywhereismyzebra.Configurations">

    <!-- TODO: Update blank fragment layout -->

    <TextView
        android:layout_width="wrap_content"
        android:layout_height="20dp"
        android:text="Nombre de plelures d&apos;oignon : "
        android:id="@+id/textView"
        android:textSize="16dp"
        android:editable="false"
        android:layout_alignParentTop="true"
        android:layout_alignParentLeft="true"
        android:layout_alignParentStart="true"
        android:layout_x="0dp"
        android:layout_y="19dp" />

    <TextView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="Fréquence des pelures d&apos;oignons : "
        android:id="@+id/textView2"
        android:layout_below="@+id/textView"
        android:layout_alignParentLeft="true"
        android:layout_alignParentStart="true"
        android:textSize="16dp"
        android:editable="false"
        android:layout_x="0dp"
        android:layout_y="85dp" />

    <TextView
        android:layout_width="wrap_content"
        android:layout_height="20dp"
        android:text="Visionner les"
        android:id="@+id/textView3"
        android:layout_below="@+id/textView2"
        android:layout_alignParentLeft="true"
        android:layout_alignParentStart="true"
        android:textSize="16dp"
        android:editable="false"
        android:layout_x="0dp"
        android:layout_y="50dp" />

    <TextView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="dernières images"
        android:id="@+id/textView4"
        android:textSize="16dp"
        android:layout_alignTop="@+id/nbImg"
        android:layout_toRightOf="@+id/nbImg"
        android:layout_toEndOf="@+id/nbImg"
        android:layout_x="169dp"
        android:layout_y="50dp" />

    <CheckBox
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="Afficher l&apos;image de fond dans la vidéo"
        android:id="@+id/checkBox"
        android:layout_below="@+id/textView3"
        android:layout_alignParentLeft="true"
        android:layout_alignParentStart="true"
        android:checked="false"
        android:textSize="16dp"
        android:layout_x="0dp"
        android:layout_y="115dp" />

    <TextView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="Interface droitier : "
        android:id="@+id/textView5"
        android:layout_below="@+id/checkBox"
        android:layout_alignParentLeft="true"
        android:layout_alignParentStart="true"
        android:textSize="16dp"
        android:editable="false"
        android:layout_x="0dp"
        android:layout_y="158dp" />

    <Switch
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:id="@+id/droitier"
        android:checked="false"
        android:layout_below="@+id/checkBox"
        android:layout_centerHorizontal="true"
        android:layout_x="142dp"
        android:layout_y="150dp" />

    <Spinner
        android:layout_width="102dp"
        android:layout_height="39dp"
        android:id="@+id/freqPel"
        android:layout_above="@+id/textView2"
        android:layout_toRightOf="@+id/textView"
        android:layout_alignRight="@+id/textView4"
        android:layout_alignEnd="@+id/textView4"
        android:layout_alignTop="@+id/textView"
        android:layout_x="245dp"
        android:layout_y="70dp"
        android:entries="@array/freqPel" />

    <Spinner
        android:layout_width="102dp"
        android:layout_height="39dp"
        android:id="@+id/nbPel"
        android:layout_above="@+id/textView2"
        android:layout_toRightOf="@+id/textView"
        android:layout_alignRight="@+id/textView4"
        android:layout_alignEnd="@+id/textView4"
        android:layout_alignTop="@+id/textView"
        android:layout_x="226dp"
        android:layout_y="5dp"
        android:entries="@array/nbPelureOignons" />

    <Button
        android:layout_width="101dp"
        android:layout_height="wrap_content"
        android:text="OK"
        android:id="@+id/ok_conf"
        android:layout_x="127dp"
        android:layout_y="189dp" />

    <EditText
        android:layout_width="59dp"
        android:layout_height="40dp"
        android:inputType="number"
        android:ems="10"
        android:id="@+id/nbImg"
        android:layout_x="100dp"
        android:layout_y="35dp"
        android:text="10" />

</AbsoluteLayout>
